---
import type { translationInterface } from "../../../lang";

type Contributor = {
    name: string;
    githubUsername: string;
};

interface Props {
    lang: translationInterface;
}

const contributors: Contributor[] = [
    {
        name: "Luka",
        githubUsername: "lukalakuka",
    },
    {
        name: "SilentNightSound",
        githubUsername: "SilentNightSound",
    },
    {
        name: "David MÃ¡rquez",
        githubUsername: "dmf347",
    },
];

const { lang } = Astro.props;
---

<div
    class="w-full px-12 sm:px-24 md:px-48 md:my-24 sm:my-12 my-6 flex flex-col justify-start items-start gap-4"
>
    <h3 class="text-2xl font-abz text-light text-center w-full">
        {lang.contributorsTitle}
    </h3>
    <div class="flex gap-2 px-24 justify-center items-center w-full">
        {
            contributors.map(({ githubUsername, name }) => (
                <a
                    class="w-16 rounded-full"
                    href={`https://github.com/${githubUsername}`}
                    target="_blank"
                    title={name}
                >
                    <img
                        class="w-full rounded-full"
                        src={`https://avatars.githubusercontent.com/${githubUsername}`}
                    />
                </a>
            ))
        }
    </div>
</div>
